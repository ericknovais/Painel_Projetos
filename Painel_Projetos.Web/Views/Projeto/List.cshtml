@model IEnumerable<Painel_Projetos.DomainModel.Class.ProjetosGrupos>

@{
    ViewBag.Title = "List";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <div class="mt-4"></div>

            <div class="card mb-4">
                @if (User.IsInRole("Representante"))
                {
                    <a href="@Url.Action("Edit", "Projeto")">
                        <div class="card-header">
                            <i class="fas fa-plus mr-1"></i>
                            Cadastrar Projeto
                        </div>
                    </a>
                }
                else
                {
                    <div class="card-header">
                        <i class="fas fa-scroll"></i>
                        Projetos
                    </div>
                }


                <div class="card-body">
                    <div class="table-responsive">
                        @if (TempData["ListaVazia"] != null)
                        {
                            <div class="container">
                                <div class="row justify-content-center">
                                    <h4>
                                        @TempData["ListaVazia"]
                                        <i class="fas fa-exclamation"></i>
                                    </h4>
                                </div>
                            </div>
                        }
                        else
                        {
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        @if (User.IsInRole("Representante"))
                                        {
                                            <th>Editar</th>
                                        }
                                        @if (TempData["AlunoAdmin"] != null)
                                        {
                                            <th>Candidatar-se</th>
                                        }
                                        <th>Detalhes</th>
                                        <th>Projeto</th>

                                        @if (!User.IsInRole("Representante"))
                                        {
                                            <th>Empresa</th>
                                            <th>Representante</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @if (User.IsInRole("Representante"))
                                            {
                                                <td>
                                                    <a class="nav-link" href="@Url.Action("Edit", "Projeto", new { id = item.ProjetoID })">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            }

                                            @if (TempData["AlunoAdmin"] != null)
                                            {
                                                <td>
                                                    <a title="Se canditatar e esse projeto" class="nav-link" href="@Url.Action("CanditarAoProjeto", "Projeto", new { id = item.ProjetoID })">
                                                        <i class="fa fa-envelope"></i>
                                                    </a>
                                                </td>
                                            }
                                            <td>
                                                <a class="nav-link" href="@Url.Action("Details", "Projeto", new { id = item.ProjetoID })">
                                                    <i class="far fa-eye"></i>
                                                </a>
                                            </td>
                                            <td>
                                                @item.Projeto.Titulo
                                            </td>

                                            @if (!User.IsInRole("Representante"))
                                            {
                                                <td>
                                                    @item.Empresa.RazaoSocial
                                                </td>
                                                <td>
                                                    @item.Representante.Nome
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }

                        <!-- Botão oculto que abre o modal de SUCESSO-->
                        <button id="btnModalSucesso" type="button" style="display: none;" data-toggle="modal" data-target="#modalSucesso"></button>

                        @if (TempData["Sucesso"] != null)
                        {
                            <!-- Modal -->
                            <div id="modalSucesso" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">

                                        <!-- Cabeçalho do modal -->
                                        <div class="modal-header">

                                            <h4 class="modal-title">
                                                SUCESSO
                                                <i class="fas fa-check"></i>
                                            </h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <!-- Corpo do modal -->
                                        <div class="modal-body">
                                            <p>@Html.Raw(TempData["sucesso"])</p>
                                        </div>

                                        <!-- Rodapé do modal-->
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        @section scripts{
            <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
            <script src="~/Content/js/datatables-demo.js"></script>
        }
    </main>
</div>