@using Painel_Projetos.DomainModel.Class
@model IEnumerable<Painel_Projetos.DomainModel.Class.Aluno>

@{
    ViewBag.Title = "List";
}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <div class="mt-4"></div>

            <div class="card mb-4">
                <div class="card-header">
                    @if (User.IsInRole("Coordenador"))
                    {
                        using (Html.BeginForm())
                        {
                            <div class="form-row">

                                <div class="col-md-2">
                                    <a href="@Url.Action("Edit", "Aluno")">
                                        <i class="fas fa-plus mr-1"></i>
                                        Incluir aluno
                                    </a>
                                </div>
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("CursoID", ViewBag.CursoId as SelectList, "Selecione um curso", new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    @Html.DropDownList("TurmaId", ViewBag.TurmaId as SelectList, "Selecione uma turma", new { @class = "form-control" })
                                </div>
                                <div class="col-md-1">
                                    <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                                </div>

                            </div>
                        }
                    }
                    else
                    {
                        using (Html.BeginForm())
                        {
                            <div class="form-row">
                                <div class="col-md-5">
                                    <i class="fas fa-users"></i>
                                    @Html.Raw(TempData["Turma"])
                                </div>
                                @if (TempData["Admin"] != null)
                                {
                                    <div class="col-md-2">
                                        @Html.RadioButton("Alunos", 1, new { @Onclick = "SelecinouRadio()" })
                                        <label> Todos Alunos</label>
                                    </div>
                                    <div class="col-md-2">
                                        @Html.RadioButton("Alunos", 2, new { @Onclick = "SelecinouRadio()" })
                                        <label> Alunos sem grupo</label>
                                    </div>
                                    <input type="submit" style="display:none" id="btnPesquisaRadio" class="btn btn-primary" />
                                }
                            </div>
                        }
                    }
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        @if (TempData["ListaVazia"] != null || TempData["Alerta"] != null)
                        {
                            <div class="container">
                                <div class="row justify-content-center">
                                    <h4>
                                        @TempData["ListaVazia"]
                                        <i class="fas fa-exclamation"></i>
                                    </h4>
                                </div>
                            </div>
                        }
                        else
                        {
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        @if (User.IsInRole("Coordenador"))
                                        {
                                            <th>Editar</th>
                                        }
                                        @if (TempData["PoderConvidar"] != null)
                                        {
                                            <th>Convidar</th>
                                        }
                                        <th>RA</th>
                                        <th>Aluno</th>
                                        <th>Data de nascimento</th>
                                        <th>E-mail</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @if (User.IsInRole("Coordenador"))
                                            {
                                                <td>
                                                    <a class="nav-link" href="@Url.Action("Edit", "Aluno", new { id = item.ID })">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            }
                                            @if (TempData["PoderConvidar"] != null)
                                            {
                                                <th>
                                                    <a title="Enviar um convide a esse aluno para entrar no seu grupo" class="nav-link" href="@Url.Action("EnviarConvite", "Aluno", new { id = item.ID })">
                                                        <i class="fa fa-envelope"></i>
                                                    </a>
                                                </th>
                                            }
                                            <td>@item.RA</td>
                                            <td>@item.Nome</td>
                                            <td>@item.DataNascimento.ToShortDateString()</td>
                                            <td>@item.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }

                        <!-- Botão oculto que abre o modal de SUCESSO-->
                        <button id="btnModalSucesso" type="button" style="display: none;" data-toggle="modal" data-target="#modalSucesso"></button>

                        @if (TempData["Convite"] != null)
                        {
                            <!-- Modal -->
                            <div id="modalSucesso" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">

                                        <!-- Cabeçalho do modal -->
                                        <div class="modal-header">
                                            <h4 class="modal-title">
                                                SUCESSO
                                                <i class="fas fa-check"></i>
                                            </h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <!-- Corpo do modal -->
                                        <div class="modal-body">
                                            <p>@Html.Raw(TempData["Convite"])</p>
                                        </div>

                                        <!-- Rodapé do modal-->
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn btn-success" data-dismiss="modal">Ok</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Botão oculto que abre o modal de Alerta -->
                        <button id="btnModalErro" type="button" style="display: none;" data-toggle="modal" data-target="#modalErro"></button>

                        @if (TempData["Alerta"] != null)
                        {
                            <!-- Modal -->
                            <div id="modalErro" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">

                                        <!-- Cabeçalho do modal -->
                                        <div class="modal-header">
                                            <h4 class="modal-title">
                                                ATENÇÃO
                                                <i class="fas fa-exclamation-triangle"></i>
                                            </h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <!-- Corpo do modal -->
                                        <div class="modal-body">
                                            <p>@TempData["Alerta"]</p>
                                        </div>

                                        <!-- Rodapé do modal-->
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <script>
                            function SelecinouRadio() {
                                $("#btnPesquisaRadio").click();
                            }
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

