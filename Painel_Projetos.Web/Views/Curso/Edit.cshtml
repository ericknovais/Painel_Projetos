@model Painel_Projetos.DomainModel.Class.Curso

@{
    ViewBag.Title = "Edit";
}
<div id="layoutSidenav_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Cadastro de Curso</h3></div>
                        <div class="card-body">

                            <button id="btnModal" type="button" style="display: none;" data-toggle="modal" data-target="#meuModal">
                                Botão oculto que abre o modal
                            </button>

                            @if (TempData["Mensagem"] == "Sucesso")
                            {
                                <!-- Modal -->
                                <div id="meuModal" class="modal fade" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <!-- Cabeçalho do modal -->
                                            <div class="modal-header">
                                                <h4 class="modal-title">Sucesso!</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <!-- Corpo do modal -->
                                            <div class="modal-body">
                                                <p>Foi incluído um novo curso no sistema </p>
                                            </div>

                                            <!-- Rodapé do modal-->
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <form>
                                    <div class="form-row">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "small mb-1" })
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Descricao, "Curso", new { htmlAttributes = new { @class = "form-control py-6" } })
                                                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>
                                    <div class="form-row">

                                        <div class="col-md-6">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.Ativo)
                                                @Html.LabelFor(model => model.Ativo, "Curso Ativo?")
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <div class="small"></div>
                                        <input type="submit" value="Salvar" class="btn btn-primary" />
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        @section Scripts {
            <script>
                $(document).ready(function () {
                    $("#btnModal").click()
                });
            </script>
        }
    </main>
</div>